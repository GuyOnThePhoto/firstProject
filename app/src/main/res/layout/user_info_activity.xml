<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slavik.myapplication.registerActivity.RegisterActivity">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/login"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginShow"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:textColor="#00ff08"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTextView"
        />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginShow"/>

    <TextView
        android:id="@+id/firstNameShow"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:textColor="#00ff08"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameTextView"/>

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameShow"/>

    <TextView
        android:id="@+id/lastNameShow"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:textColor="#00ff08"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameTextView"/>

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameShow"/>

    <TextView
        android:id="@+id/passwordShow"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:textColor="#00ff08"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView"/>

</android.support.constraint.ConstraintLayout>
